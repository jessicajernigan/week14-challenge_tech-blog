{{!-- Can't reuse the  partial here, because the title is an editable form field --}}
<div class="flexcolumn">
  <article class="edit-container">
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
      Edit Post
    </h2>
    <form class="edit-post-form">
      <div>
        <input name="post-title" type="text" value="{{post.title}}" />
      </div>
      <div>
        {{!-- <input name="post-content" type="text" value="{{post.post_content}}" /> --}}
        <textarea name="post-content" type="text" >{{post.post_content}}</textarea>
      </div>
      <div>
        <a href="/blogpost/{{post.id}}">{{post.comments.length}}
          {{format_plural "comment" post.comments.length}}</a>
      </div>

      <button type="submit">Save post</button>
      <button type="button" class="delete-post-btn">Delete post</button>
    </form>
  </article>

